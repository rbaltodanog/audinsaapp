<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow
        android:layout_height="1dp"
        android:background="#BDBDBD" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_span="2"
            android:text="" >
        </TextView>
    </TableRow>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:padding="1dp" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="1dip" >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/lblSuResultado"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_span="1"
                    android:text="@string/strCalificacion"
                    android:textSize="25sp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/lblAcciones"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_span="1"
                    android:text="@string/strAcciones"
                    android:textSize="25sp" />
            </FrameLayout>
        </TableRow>

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:padding="0dp" >

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="0dip" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center_horizontal" >

                    <ImageView
                        android:id="@+id/imgViewCuestionarioAprobado"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="false"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_centerHorizontal="false"
                        android:layout_centerInParent="false"
                        android:layout_centerVertical="false"
                        android:layout_gravity="center_horizontal"
                        android:adjustViewBounds="true"
                        android:maxHeight="90dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/animation_resultado_aprobado" />

                    <TextView
                        android:id="@+id/txtResultadoDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/imgViewCuestionarioAprobado"
                        android:gravity="bottom|center"
                        android:text="Consulte a un especialista"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="15sp"
                        android:textStyle="italic" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1" >

                    <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="1dp" >

                        <TableRow
                            android:id="@+id/row_contactar_clinica"
                            android:layout_width="match_parent"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/imgContactarClinica"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/imgContactarClinicaContentDescription"
                                android:src="@drawable/ic_contactar_clinica" />

                            <TextView
                                android:id="@+id/lblContactarClinica"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:text="@string/lblContactarClinica"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow
                            android:layout_height="1dp"
                            android:background="#BDBDBD" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_span="2"
                                android:text="" >
                            </TextView>
                        </TableRow>

                        <TableRow
                            android:layout_height="1dp"
                            android:background="#BDBDBD" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_span="2"
                                android:text="" >
                            </TextView>
                        </TableRow>

                        <TableRow
                            android:id="@+id/row_compartir_resultado"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/imgCompartirResultado"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:contentDescription="@string/imgCompartirContentDescription"
                                android:src="@drawable/ic_compartir" />

                            <TextView
                                android:id="@+id/lblCompartir"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="10dp"
                                android:gravity="center_vertical"
                                android:text="@string/lblCompartir"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textSize="15sp" />
                        </TableRow>

                        <TableRow
                            android:layout_height="1dp"
                            android:background="#BDBDBD" >

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_span="2"
                                android:text="" >
                            </TextView>
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_margin="0dp"
                            android:gravity="center_horizontal|bottom" >

                            <TextView
                                android:id="@+id/lblDuracionExamen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal"
                                android:layout_span="2"
                                android:text="DuraciÃ³n del examen: 125 segundos"
                                android:textAppearance="?android:attr/textAppearanceSmall" />
                        </TableRow>
                    </TableLayout>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </TableLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|center_horizontal"
        android:padding="1dip" >

        <Button
            android:id="@+id/btnRegresar"
            android:onClick="onRegresarClick"
            android:text="@string/strRegresar" />
    </TableRow>

</TableLayout>