<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_resultado_aprobado"
    android:gravity="top"
    tools:context=".CuestionarioResultadoAprobado" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Resultado"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#404040"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtDatosExamen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#404040" />

    <ImageView
        android:id="@+id/imgViewCuestionarioAprobado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        android:maxHeight="300dp"
        android:scaleType="fitStart"
        android:src="@drawable/animation_resultado_aprobado" />

</RelativeLayout>