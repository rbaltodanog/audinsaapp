<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:endColor="#18476f"
                android:startColor="#1e5e95"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#6899cc" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#18476f"
                android:startColor="#1e5e95"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#6899cc" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#3297ed"
                android:startColor="#2985d3"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#6899cc" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>