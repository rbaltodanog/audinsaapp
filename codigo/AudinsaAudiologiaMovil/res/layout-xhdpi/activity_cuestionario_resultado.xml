<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/lblSuResultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="1"
            android:gravity="center"
            android:text="Su calificaciÃ³n"
            android:textSize="30sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imgViewCuestionarioAprobado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:adjustViewBounds="true"
            android:maxHeight="200dp"
            android:scaleType="fitStart"
            android:src="@drawable/animation_resultado_aprobado" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:gravity="center_vertical|center_horizontal" >

        <TextView
            android:id="@+id/txtResultadoDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="bottom|center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15sp"
            android:textStyle="italic" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="2dp" >

        <TextView
            android:id="@+id/lblAcciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="1"
            android:text="Acciones"
            android:textSize="30sp" />
    </TableRow>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="0dp" >

        <TableRow
            android:id="@+id/row_contactar_clinica"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgContactarClinica"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/imgContactarClinicaContentDescription"
                android:src="@drawable/ic_contactar_clinica" />

            <TextView
                android:id="@+id/lblContactarClinica"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/lblContactarClinica"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_height="1dp"
            android:background="#BDBDBD" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2" />
        </TableRow>

        <TableRow
            android:id="@+id/row_borrar_resultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgBorrarResultado"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/imgBorrarContentDescription"
                android:src="@drawable/ic_borrar" />

            <TextView
                android:id="@+id/lblBorrar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/lblBorrar"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_height="1dp"
            android:background="#BDBDBD" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2" />
        </TableRow>

        <TableRow
            android:id="@+id/row_compartir_resultado"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/imgCompartirResultado"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="@string/imgCompartirContentDescription"
                android:src="@drawable/ic_compartir" />

            <TextView
                android:id="@+id/lblCompartir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/lblCompartir"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_height="1dp"
            android:background="#BDBDBD" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_span="2" />
        </TableRow>
    </TableLayout>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="2dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal" >

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Regresar" />
    </TableRow>

</TableLayout>